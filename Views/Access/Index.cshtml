@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Voucher System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body style="background-color:  #f0f3f4 !important">
    <header>
        <nav class="navbar bg-body-tertiary" style="background-color: #bdc3c7 !important;">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-auto d-flex align-items-center
                        <img src="/Images/logo2.jpg" width="50" height="50" />
                    </div>
                    <div class="col">
                        <h1 style="color: black;">Sistema de vales</h1>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    @Html.Raw(TempData["Message_Access"])
    <div class="d-flex justify-content-center align-items-center py-4 bg-body-tertiary">
        <div class="container" style="width: 50%;">
            <h1 style="text-align: center;">Iniciar sesión</h1>
            <hr />
            <form style="text-align: center;" asp-action="Login" asp-controller="Access" method="post">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" placeholder="example@example.com" name="email">
                    <label for="floatingInput">Correo</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" placeholder="passwordxd" name="password">
                    <label for="floatingPassword">Contraseña</label>
                </div>
                <br />
                <input class="btn btn-primary" style="width: 100%" type="submit" value="Aceptar">
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>