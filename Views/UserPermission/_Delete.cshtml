@using VoucherCapture.ViewModel
@model UserPermission_ViewModel

<div class="modal fade" id="DeleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">¡Atención!</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="container">
                <h5 class="card-text">¿Está seguro de eliminar <b>TODOS</b> los permisos?</h5>
                <p class="card-text">Este usuario ya no podrá acceder al sistema.</p>
                <br />
                <div class="container-md">
                    <div class="card border-danger">
                        <div class="card-header bg-danger" style="color:white;">
                            Datos
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Usuario: @Model.User</h5>
                            <p class="card-text">Correo: @Model.Email</p>
                            <p class="card-text">Puesto: @Model.Role</p>
                            <p class="card-text">Departamento: @Model.Department</p>
                        </div>
                    </div>
                </div>
                <br />
            </div><form method="post" asp-action="Delete" asp-controller="UserPermission">
                <div class="modal-footer">
                    <input type="hidden" asp-for="EmpNumber" />
                    <button id="btnSave" type="submit" class="btn btn-danger" style="margin-right: auto">Eliminar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Regresar</button>
                </div>
            </form>
        </div>
    </div>
</div>