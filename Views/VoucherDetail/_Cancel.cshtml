@model Voucher_Model

<div class="modal fade" id="DeleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" asp-action="Cancel" asp-controller="VoucherDetail">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">¡Atención!</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro de cancelar el voucher <b>@Model.VoucherNumber</b>? Una vez cancelado, las cantidades de los insumos se actualizarán.</p>
                </div>
                <input type="hidden" asp-for="VoucherNumber" />
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger" style="margin-right: auto;">Eliminar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </form>
        </div>
    </div>
</div>